<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="basePackage" value="com.dianping.zebra.admin.dao" />
    </bean>
    
    <bean id="placeholder" class="com.dianping.lion.client.SpringConfig">
    </bean>
    
    <bean id="monitorConfig" class="com.dianping.zebra.admin.monitor.MonitorConfig">
        <property name="pingFailLimit" value="${zebra.monitor.fail.limit}"></property>
        <property name="pingIntervalSeconds" value="${zebra.monitor.sleep.interval}"></property>
        <property name="testSql" value="${zebra.monitor.testSql}"></property>
        <property name="validPeriod" value="${zebra.monitor.validPeriod}"></property>
    </bean>
</beans>