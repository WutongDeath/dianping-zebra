<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-4.1.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop-4.1.xsd
           http://www.springframework.org/schema/mvc
           http://www.springframework.org/schema/mvc/spring-mvc-4.1.xsd">

    <aop:aspectj-autoproxy/>

    <context:annotation-config/>
    <context:component-scan base-package="com.dianping.zebra.admin"/>

    <mvc:annotation-driven/>

    <bean id="placeholder" class="com.dianping.lion.client.SpringConfig">
    </bean>
    
    <bean id="monitorConfig" class="com.dianping.zebra.admin.monitor.MonitorConfig">
        <property name="pingFailLimit" value="${zebra.monitor.fail.limit}"></property>
        <property name="pingIntervalSeconds" value="${zebra.monitor.sleep.interval}"></property>
    </bean>
</beans>