<group-data-source-config>
	<data-source-config id="db1" weight="1" readonly="false">
		<min-pool-size>5</min-pool-size>
		<max-pool-size>5</max-pool-size>
		<connectionCustomizerClassName>com.dianping.zebra.group.manager.DataSourceMonitorCustomizer</connectionCustomizerClassName>
	</data-source-config>
	<data-source-config id="db2" weight="2" readonly="true">
		<max-pool-size>5</max-pool-size>
		<initial-pool-size>5</initial-pool-size>
	</data-source-config>
	<health-check-interval>50</health-check-interval>
	<max-error-counter>100</max-error-counter>
	<retry-times>0</retry-times>
	<router-strategy>roundrobin</router-strategy>
	<cookie-domain>.dianping.com</cookie-domain>
</group-data-source-config>