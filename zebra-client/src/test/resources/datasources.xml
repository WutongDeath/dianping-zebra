<group-data-source-config health-check-interval="5000" router-strategy="roundrobin">
	<datasources>
		<data-source-config id="datasource1" readonly="true"
			weight="10">
			<driver-class>java.sql.Driver</driver-class>
			<poolClass>com.mchange.v2.c3p0.impl.C3P0PooledConnectionPoolManager
			</poolClass>
			<connectionUrl>jdbc:mysql://127.0.0.1:3306/sample</connectionUrl>
			<userName>root</userName>
			<password>123456</password>
			<initMethod>init</initMethod>
			<destroyMethod>destroy</destroyMethod>
			<pool-properties>
				<maxSize>10</maxSize>
				<initSize>3</initSize>
			</pool-properties>
			<connection-properties>
				<readTimeout>100</readTimeout>
			</connection-properties>
		</data-source-config>
		<data-source-config id="datasource2" readonly="true"
			weight="10">
		</data-source-config>
	</datasources>
</group-data-source-config>