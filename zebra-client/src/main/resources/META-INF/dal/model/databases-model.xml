<?xml version="1.0" encoding="UTF-8"?>
<model model-package="com.dianping.zebra.group.config.database" enable-base-visitor="true" enable-sax-parser="true" enable-xml-builder="true" enable-merger="true">
	<entity name="databases" root="true">
		<entity-ref name="database" type="map" names="databases" />
	</entity>
	<entity name="database">
		<attribute name="id" value-type="String" key="true" />
		<element name="jdbc-url" value-type="String" />
		<element name="user" value-type="String" />
		<element name="driver-class" value-type="String" />
		<element name="password" value-type="String" />
		<element name="min-pool-size" value-type="int" primitive="true" />
		<element name="max-pool-size" value-type="int" primitive="true"/>
		<element name="initial-pool-size" value-type="int" primitive="true"/>
		<element name="connection-customize-class-name" value-type="String" default-value="com.dianping.zebra.group.manager.DataSourceMonitorCustomizer"/>
	</entity>
</model>

