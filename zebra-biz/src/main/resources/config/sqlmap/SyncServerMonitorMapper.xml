<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dianping.zebra.biz.dao.SyncServerMonitorMapper">

    <select id="getAllAlive" parameterType="map" resultType="SyncServerMonitorEntity">
        SELECT * FROM SyncServerMonitor where UpdateTime > DATE_SUB(NOW(),INTERVAL 15 MINUTE)
    </select>
    
    <select id="getAllSyncServer" parameterType="map" resultType="SyncServerMonitorEntity">
        SELECT * FROM SyncServerMonitor
    </select>

    <insert id="create" parameterType="SyncServerMonitorEntity">
        INSERT INTO SyncServerMonitor
        (Name,`IP`,`Load`,UpdateTime)
        VALUES
        (#{name},#{ip},#{load},NOW())
    </insert>

    <update id="update" parameterType="SyncServerMonitorEntity">
        UPDATE SyncServerMonitor SET
        `Load` = #{load},
        `IP` = #{ip},
        UpdateTime = NOW()
        WHERE Name = #{name}
    </update>
</mapper>